<div class="login-container" style="width: 50%; margin:auto">
  <h2 style="margin-top: 1rem; text-align: center;">Actualizacion de contraseña</h2>
  <form class="login-form" id="form">
    <input
      type="password"
      id="password"
      name="password"
      placeholder="Contraseña"
      required
    />
    <input
      type="password"
      id="rePassword"
      name="rePassword"
      placeholder="Repetir contraseña"
      required
    />
    <h4 id="error"></h4>
    <input type="submit" id="submit" value="Actualizar" />
  </form>

</div>

<script src="/js/newPass.js"></script>